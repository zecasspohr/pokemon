{
  "compilerOptions": {
      "target": "es2018",
      "module": "es2020",
      "esModuleInterop": true,
      "lib": ["es2018", "esnext.asynciterable"],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}